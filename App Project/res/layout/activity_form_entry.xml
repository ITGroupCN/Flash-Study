<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout="@+id/FormActivity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/FormActivity_nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            style="@style/DefaultText.Medium"/>
        
        <EditText android:id="@+id/FormActivity_nameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/FormActivity_nameText"
            android:inputType="text"/>
        
        <TextView android:id="@+id/FormActivity_descText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc"
            android:layout_below="@id/FormActivity_nameText"
            android:layout_toLeftOf="@id/FormActivity_nameInput"
            style="@style/DefaultText.Medium"/>
        
        <EditText android:id="@+id/FormActivity_descInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/FormActivity_nameInput"
            android:layout_toRightOf="@id/FormActivity_descText"
            android:inputType="text"/>
        
    </RelativeText>

</LinearLayout>
