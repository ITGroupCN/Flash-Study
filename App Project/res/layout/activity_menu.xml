<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >
    
    <ImageView android:id="@+id/MenuActivity_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <ListView android:id="@+id/MenuActivity_setList"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <LinearLayout android:id="@+id/MenuActivity_buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button android:id="@+id/MenuActivity_cameraUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/camera_upload"/>
        
        <Button android:id="@+id/MenuActivity_formUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/form_upload"/>
        
    </LinearLayout>
</LinearLayout>
