<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
	<TextView android:id="@+id/SetViewerActivity_setName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/DefaultText.Large"/>
	
	<TextView android:id="@+id/SetViewerActivity_pos"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/DefaultText.Medium"/>
	
	<ViewFlipper android:id="@+id/SetViewerActivity_flipper"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	    
	    <include android:id="@+id/SetViewerActivity_flashcardFront"
	        layout="@layout/layout_flashcard_front"/>
	    
	    <include android:id="@+id/SetViewerActivity_flashcardBack"
	        layout="@layout/layout_flashcard_back"/>
	    
	</ViewFlipper>
</LinearLayout>
